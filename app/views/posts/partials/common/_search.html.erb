<section id="search-box">
  <h1>Search</h1>
  <%= form_tag(path, :method => "get") do %>
    <%= text_field_tag("tags", tags, :size => 20, :id => tags_dom_id, :class => "search_list") %>
    <% if params[:raw] %>
      <%= hidden_field_tag :raw, params[:raw] %>
    <% end %>
    <% if params[:random] %>
      <%= hidden_field_tag :random, params[:random] %>
    <% end %>
    <%= hidden_field_tag "ms", "1" %>
    <%= submit_tag "", :name => nil, :class => "secondary_search" %>
  <% end %>
</section>
